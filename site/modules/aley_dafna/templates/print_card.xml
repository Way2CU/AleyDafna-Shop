<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../../../../units/schema/language.dtd">
<document>
	<head>
		<title><cms:text constant="site_title"/></title>
		<cms:link
			href="_BASEURL.'/site/modules/aley_dafna/include/print.css'"
			rel="stylesheet"
			type="type"
			cms:eval="href"
			/>
		<cms:module name="head_tag" action="print_tag"/>
	</head>

	<body class="print">
		<div
			class="card"
			style="'background-image: url('.$params['image'].');'"
			cms:eval="style"
			>
			<span
				class="text"
				style="'left: '.$params['left'].'; top: '.$params['top'].'; right: '.$params['right'].'; bottom: '.$params['bottom'].';'"
				cms:eval="style"
				>
				<cms:var param="text"/>
			</span>
		</div>
	</body>
</document>
