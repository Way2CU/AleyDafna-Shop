<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<cms:var name="_DOCTYPE"/>
	<html lang="$language" cms:eval="lang">
		<head>
			<title>
				<cms:text constant="site_title"/>
				<cms:raw text=" - "/>
				<cms:module
					name="shop"
					action="show_item"
					id="fix_id($_REQUEST['id'])"
					template="parts/product_name.xml"
					cms:eval="id"
					/>
			</title>
			<!-- Page description -->
			<cms:module
				name="shop"
				action="show_item"
				id="fix_id($_REQUEST['id'])"
				template="parts/page_description.xml"
				cms:eval="id"
				/>
			<cms:module name="shop" action="include_cart_scripts"/>
			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body class="$language_rtl ? 'rtl' : 'ltr'" cms:eval="class">
			<!-- Header -->
			<cms:template file="parts/header.xml"/>

			<section id="product">	
				<div class="product_wrapper">
					<cms:module
						name="shop"
						action="show_item"
						id="fix_id($_REQUEST['id'])"
						template="parts/product_details_template.xml"
						cms:eval="id"
						/>
				</div>	

				<div id="related_items">
					<h3><cms:text constant="title_related_items"/></h3>
					<cms:module
						name="shop"
						action="show_item_list"
						category="$_REQUEST['category']"
						related="fix_id($_REQUEST['id'])"
						template="parts/related_items.xml"
						cms:eval="related,category"
						/>
				</div>
				
				<cms:template file="parts/banners.xml"/>
			</section>		

			<!-- Footer -->
			<cms:template file="parts/footer.xml"/>	
		</body>
	</html>
</document>
