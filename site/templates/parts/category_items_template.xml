<document>
	<cms:desktop>
		<a 
			href="url_Make('product', 'shop', array('category', fix_id($_REQUEST['id'])), array('id',$params['id']))"
			class="item" 
			data-uid="$params['uid']"
			cms:eval="href,data-uid"
			>

			<img src="gallery::getGroupThumbnailById($params['gallery'], null, 200,Thumbnail::CONSTRAIN_WIDTH)" alt="$params['title'][$language]"  cms:eval="src,alt"/>
			<p><cms:var param="name" multilanguage="yes"/></p>
			<p><cms:var param="price"/></p>
			<p class="description"><cms:var param="description" multilanguage="yes"/></p>
		</a>
	</cms:desktop>

	<cms:mobile>
		<a 
			href="url_Make('product', 'shop', array('category', fix_id($_REQUEST['id'])), array('id',$params['id']))"
			class="item" 
			data-uid="$params['uid']"
			cms:eval="href,data-uid"
			>

			<img src="gallery::getGroupThumbnailById($params['gallery'], null, 120,Thumbnail::CONSTRAIN_WIDTH)" alt="$params['title'][$language]"  cms:eval="src,alt"/>
			<p><cms:var param="name" multilanguage="yes"/></p>
			<p><cms:var param="price"/></p>
		</a>
	</cms:mobile>
</document>