<document>
	<cms:desktop>
		<a href="$params['url']"  class="link" cms:eval="href">
			<img src="$params['image']" alt="$params['title'][$language]" cms:eval="src,alt"/>
		</a>
	</cms:desktop>

	<cms:mobile>
		<a 
			href="$params['url']" 
			style="'background-image: url('.$params['image'].');'"
			cms:eval="href,style"
			>
			<cms:markdown param="description" multilanguage="yes"/>	
		</a>
	</cms:mobile>
</document>