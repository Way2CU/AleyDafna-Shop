<document>
	<div class="item" data-id="$params['uid']" cms:eval="data-id">
		<label for="$params['name'][$language]" cms:eval="for">
			<cms:desktop>
				<img 
					src="gallery::getGroupThumbnailById($params['gallery'], null, 250,Thumbnail::CONSTRAIN_BOTH)"
					alt="$params['title'][$language]"  
					cms:eval="src,alt"/>
			</cms:desktop>
			
			<cms:mobile>
				<img 
					src="gallery::getGroupThumbnailById($params['gallery'], null, 120,Thumbnail::CONSTRAIN_BOTH)"
					alt="$params['title'][$language]"  
					cms:eval="src,alt"/>
			</cms:mobile>		
				
			<input 
				type="checkbox"
				id="$params['name'][$language]"
				name="related"
				value="$params['name'][$language]"
				cms:eval="value,id"
				/>
			<span></span>		
		</label>		

		<p class="price" data-currency="shop::getDefaultCurrency()" cms:eval="data-currency">
			<cms:text constant="currency"/><cms:raw text=" "/><cms:var param="price"/>
		</p>

		<p class="name">
			<cms:var param="name" multilanguage="yes"/>
		</p>
	</div>		
</document>