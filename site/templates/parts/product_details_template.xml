<document>
	<div class="product_information" data-id="$params['uid']" cms:eval="data-id">
		<h2><cms:var param="name" multilanguage="yes"/></h2>

		<cms:mobile>
			<figure>
				<img
					src="gallery::getGroupThumbnailById($params['gallery'], null, 250,Thumbnail::CONSTRAIN_BOTH)"
					alt="$params['title'][$language]"
					cms:eval="src,alt"/>
			</figure>
		</cms:mobile>

		<cms:markdown param="description" multilanguage="yes"/>

		<!-- Product sizes -->
		<p><strong><cms:text constant="title_sizes"/></strong></p>

		<label class="regular">
			<figure>
				<img src="_BASEURL.'/site/images/flowers.svg'" alt="flowers-logo" cms:eval="src" />
			</figure>

			<p class="price"><cms:var param="price" /></p>
			<p class="name"><cms:text constant="label_regular"/></p>

			<input
				type="radio"
				name="size"
				checked="checked"
				value="$params['price']"
				cms:eval="value,id,name"
				/>
			<span/>
		</label>

		<cms:module
			name="shop"
			action="show_property_list"
			item="$params['id']"
			starts_with="price_"
			sort_by="value"
			cms:eval="item"
			template="parts/price_property.xml"
			/>
		<br/>

		<a href="javascript:void(0)" class="add">
			<cms:text constant="title_button_add"/>
			<svg>
				<use
					href="#cart-plus"
					xlink:href="site/images/site-sprite.svg#cart-plus"
					/>
			</svg>
		</a>

		<a href="javascript:void(0)" class="checkout">
			<cms:text constant="title_button_order"/>
			<svg>
				<use
					href="#cart-check"
					xlink:href="site/images/site-sprite.svg#cart-check"
					/>
			</svg>
		</a>
	</div>

	<cms:desktop>
		<figure>
			<img
				src="gallery::getGroupThumbnailById($params['gallery'], null, 350,Thumbnail::CONSTRAIN_BOTH)"
				alt="$params['title'][$language]"
				cms:eval="src,alt"/>
			<p class="selected_name"><cms:text constant="label_regular"/></p>
			<p class="selected_price"><cms:var param="price" /></p>
		</figure>
	</cms:desktop>
</document>
