<document>
	<footer>
		<section id="features">
			<ul>
				<cms:module
					name="articles"
					action="show_list"
					group="features"
					template="stock/features_generic.xml"
					>
					<param name="sprite" value="site/images/site-sprite.svg"/>
				</cms:module>	
			</ul>
		</section>
		
		<cms:desktop>
			<nav id="footer_nav">
				<ul>
					<cms:module
						name="shop"
						action="show_category"
						text_id="flowers"
						template="parts/category_list_menu.xml"
						/>

					<cms:module
						name="shop"
						action="show_category"
						text_id="plants"
						template="parts/category_list_menu.xml"
						/>

					<cms:module
						name="shop"
						action="show_category"
						text_id="artificial"
						template="parts/category_list_menu.xml"
						/>

					<cms:module
						name="shop"
						action="show_category"
						text_id="ballons_wine"
						template="parts/category_list_menu.xml"
						/>

					<cms:module
						name="shop"
						action="show_category"
						text_id="sales"
						template="parts/category_list_menu.xml"
						/>

					<li class="sub-menu">
						<a
							class="$section == 'about' ? 'active' : false"
							href="url_Make('', 'about')"
							cms:eval="href"
							cms:optional="class"
							>
							<cms:text constant="menu_about"/>
						</a>
						<ul class="drop">					
							<cms:template file="parts/about_sub_list_menu.xml"/>
						</ul>
					</li>

					<li class="sub-menu">
						<a
							class="$section == 'contact-us' ? 'active' : false"
							href="url_Make('', 'contact-us')"
							cms:eval="href"
							cms:optional="class"
							>
							<cms:text constant="menu_contact"/>
						</a>	
						<ul class="drop">					
							<cms:template file="parts/contact_sub_list_menu.xml"/>
						</ul>
					</li>							
				</ul>
			</nav>
		</cms:desktop>

		<section id="information">
			<div>
				<svg>
					<use
						href="#globe"
						xlink:href="site/images/site-sprite.svg#globe"
						/>
				</svg>
				<cms:module
					name="language_menu"
					action="print"
					/>
			</div>

			<address>
				<svg>
					<use
						href="#location"
						xlink:href="site/images/site-sprite.svg#location"
						/>
				</svg>
				<p><cms:text constant="address"/></p>
			</address>

			<div>
				<svg>
					<use
						href="#clock"
						xlink:href="site/images/site-sprite.svg#clock"
						/>
				</svg>
				<p><cms:text constant="working_hours"/></p>
			</div>

			<div>
				<svg>
					<use
						href="#phone"
						xlink:href="site/images/site-sprite.svg#phone"
						/>
				</svg>

				<a
					href="'tel:'.urlencode(Language::getText('phone'))"
					cms:eval="href"
					class="phone"
					>
					<cms:text constant="phone"/>
				</a>

				<a
					href="'tel:'.urlencode(Language::getText('phone2'))"
					cms:eval="href"
					class="phone"
					>
					<cms:text constant="phone2"/>
				</a>
			</div>

		</section>

		<section id="payments">
			<a href="#" class="share">
				<svg>
					<use
						href="#facebook"
						xlink:href="site/images/site-sprite.svg#facebook"
						/>
				</svg>
				<cms:text constant="title_facebook"/>
			</a>

			<img 
				src="_BASEURL.'/site/images/payment-icons.svg'"  
				alt="payments-icons"
				cms:eval="src"
				/>

			<p><cms:text constant="title_footer_sale"/></p>

			<cms:module
				name="contact_form"
				action="show"
				text_id="contact_mail"
				/>

		</section>

		<cms:template file="stock/copyright.xml">
			<param name="holder" value="copyright_holder"/>
			<param name="text" value="copyright_text"/>
			<param name="light" value=""/>
		</cms:template>
	</footer>
</document>