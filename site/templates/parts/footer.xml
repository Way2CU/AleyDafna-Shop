<document>
	<footer>
		<section id="features">
			<ul>
				<cms:module
					name="articles"
					action="show_list"
					group="features"
					template="stock/features_generic.xml"
					>
					<param name="sprite" value="site/images/site-sprite.svg"/>
				</cms:module>	
			</ul>
		</section>

		<nav id="footer_nav">
			<ul>
				<cms:module
					name="shop"
					action="show_category"
					text_id="flowers"
					template="parts/category_list_menu.xml"
					/>

				<cms:module
					name="shop"
					action="show_category"
					text_id="plants"
					template="parts/category_list_menu.xml"
					/>

				<cms:module
					name="shop"
					action="show_category"
					text_id="artificial"
					template="parts/category_list_menu.xml"
					/>

				<cms:module
					name="shop"
					action="show_category"
					text_id="additional_products"
					template="parts/category_list_menu.xml"
					/>

				<cms:module
					name="shop"
					action="show_category"
					text_id="sales"
					template="parts/category_list_menu.xml"
					/>

				<li class="sub-menu">
					<a
						class="$section == 'about' ? 'active' : false"
						href="url_Make('', 'about')"
						cms:eval="href"
						cms:optional="class"
						>
						<cms:text constant="menu_about"/>
					</a>
					<ul class="drop">					
						<cms:template file="parts/about_sub_list_menu.xml"/>
					</ul>
				</li>

				<li>
					<a
						class="$section == 'contact_us' ? 'active' : false"
						href="url_Make('', 'contact')"
						cms:eval="href"
						cms:optional="class"
						>
						<cms:text constant="menu_contact"/>
					</a>					
				</li>								
			</ul>
		</nav>
	</footer>
</document>