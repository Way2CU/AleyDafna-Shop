<document>
	<section class="group" id="$params['id']" cms:eval="id">
		<h5>
			<cms:module
				name="shop"
				action="show_category"
				id="$params['id']"
				template="parts/category_name.xml"
				cms:eval="id"
				/>
		</h5>

		<!-- optional category description and image -->
		<cms:mobile>
			<cms:module
				name="shop"
				action="show_category"
				id="$params['id']"
				template="parts/category_optional_description.xml"
				cms:eval="id"
				/>
		</cms:mobile>

		<cms:module
			name="shop"
			action="show_item_list"
			category="$params['id']"
			order_by="priority"
			order_asc="0"
			template="parts/category_items_template.xml"
			cms:eval="category"
			/>
	</section>	
		
</document>