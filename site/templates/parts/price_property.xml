<document>
	<label
		class="substr($params['text_id'], 6)"
		cms:eval="class"
		>
		<figure>
			<img src="_BASEURL.'/site/images/flowers.svg'" alt="flowers-logo" cms:eval="src" />
		</figure>

		<p class="price"><cms:var param="value"/></p>
		<p class="name"><cms:var param="name" multilanguage="yes"/></p>

		<input
			type="radio"
			name="size"
			data-text_id="$params['text_id']"
			value="$params['value']"
			id="$params['name'][$language]"
			cms:eval="value,data-text_id,id"
			/>
		<span/>
	</label>
</document>