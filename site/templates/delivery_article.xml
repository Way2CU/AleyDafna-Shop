<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<cms:var name="_DOCTYPE"/>
	<html lang="$language" dir="$language_rtl ? 'rtl' : 'ltr'" cms:eval="lang,dir">
		<head>
			<title><cms:text constant="site_title"/></title>

			<cms:template file="parts/opengraph_generic.xml"/>
			<cms:module name="shop" action="include_cart_scripts"/>
			<cms:collection include="page_control,communicator,dialog,jquery_event_drag,jquery_event_scroll,scrollbar"/>
			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body>
			<!-- Header -->
				<cms:template file="parts/header.xml"/>

				<section class="delivery_content">
					<cms:module
						name="articles"
						action="show"
						text_id="$_REQUEST['text_id']"
						template="stock/article_generic.xml"
						cms:eval="text_id"
					>
						<param name="title" value=""/>
					</cms:module>
				</section>

			<!-- Footer -->
			<cms:template file="parts/footer.xml"/>
		</body>
	</html>
</document>
