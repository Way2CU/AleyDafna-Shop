<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<cms:var name="_DOCTYPE"/>
	<html lang="$language" cms:eval="lang">
		<head>
			<title>
				<cms:text constant="site_title"/>
				<cms:raw text=" - "/>
				<cms:module
					name="shop"
					action="show_category"
					id="fix_id($_REQUEST['id'])"
					template="parts/category_name.xml"
					cms:eval="id"
					/>
			</title>
			<!-- Page description -->
			<cms:module
				name="shop"
				action="show_category"
				id="fix_id($_REQUEST['id'])"
				template="parts/page_description.xml"
				cms:eval="id"
				/>
			<cms:module name="shop" action="include_cart_scripts"/>
			<cms:collection include="page_control,dialog,jquery_event_drag,jquery_event_scroll,scrollbar"/>
			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body class="$language_rtl ? 'rtl' : 'ltr'" cms:eval="class">
			<!-- Header -->
			<cms:desktop>
				<cms:template file="parts/header.xml"/>
			</cms:desktop>

			<cms:mobile>
				<cms:template file="parts/mobile_header.xml"/>
			</cms:mobile>

			<section id="category">
				<!-- Show subcategory without menu -->
				<cms:if condition="isset($_REQUEST['subcategory'])" >
					<h2>
						<cms:module
							name="shop"
							action="show_category"
							id="fix_id($_REQUEST['subcategory'])"
							template="parts/category_name.xml"
							cms:eval="id"
							/>
					</h2>

					<cms:module
						name="shop"
						action="show_category"
						id="fix_id($_REQUEST['subcategory'])"
						template="parts/category_optional_description.xml"
						cms:eval="id"
						/>
					
					<cms:module
						name="shop"
						action="show_item_list"
						category="fix_id($_REQUEST['subcategory'])"
						order_by="priority"
						order_asc="0"
						template="parts/category_items_template.xml"
						cms:eval="category"
						/>
				</cms:if>

				<!-- Show list of categories in their own containers -->
				<cms:if condition="!isset($_REQUEST['subcategory'])">
					<h2>
						<cms:module
							name="shop"
							action="show_category"
							id="fix_id($_REQUEST['id'])"
							template="parts/category_name.xml"
							cms:eval="id"
							/>
					</h2>

					<cms:module
						name="shop"
						action="show_item_list"
						category="fix_id($_REQUEST['id'])"
						order_by="priority"
						order_asc="0"
						template="parts/category_items_template.xml"
						cms:eval="category"
						/>
					
					<cms:module
						name="shop"
						action="show_category_list"
						parent_id="fix_id($_REQUEST['id'])"
						order_by="text_id"
						order_asc="0"
						template="parts/category_list_template.xml"
						cms:eval="parent_id"
						/>
				</cms:if>
			</section>

			<section id="banner">
				<cms:template file="parts/banners.xml"/>
			</section>
			<!-- Footer -->
			<cms:template file="parts/footer.xml"/>	
		</body>
	</html>
</document>