<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<cms:var name="_DOCTYPE"/>
	<html lang="$language" cms:eval="lang">
		<head>
			<title>
				<cms:text constant="site_title"/>
				<cms:raw text=" - "/>
				<cms:module
					name="shop"
					action="show_category"
					id="fix_id($_REQUEST['id'])"
					template="parts/category_name.xml"
					cms:eval="id"
					/>
			</title>
			<!-- Page description -->
			<cms:module
				name="shop"
				action="show_category"
				id="fix_id($_REQUEST['id'])"
				template="parts/page_description.xml"
				cms:eval="id"
				/>
			<cms:module name="shop" action="include_cart_scripts"/>	
			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body class="$language_rtl ? 'rtl' : 'ltr'" cms:eval="class">
			<!-- Header -->
			<cms:template file="parts/header.xml"/>

			<section id="category">	
				<h2>
					<cms:module
						name="shop"
						action="show_category"
						id="fix_id($_REQUEST['id'])"
						template="parts/category_name.xml"
						cms:eval="id"
						/>
				</h2>	
				
				<cms:module
					name="shop"
					action="show_item_list"
					category="fix_id($_REQUEST['id'])"
					template="parts/category_items_template.xml"
					cms:eval="category"
					/>
				
				<cms:module
					name="shop"
					action="show_category_list"
					parent_id="fix_id($_REQUEST['id'])"
					template="parts/category_list_template.xml"
					cms:eval="parent_id"
					/>
	
			</section>

			<section id="banner">
				<div class="banner business">
					<div>
						<p><cms:text constant="title_bottom_banner"/></p>

						<a
							href="url_Make('business-clients', 'contact-us')"
							cms:eval="href"
							>
							<cms:text constant="title_button_special_deals"/>
						</a>
					</div>
				</div>

				<div class="banner loyalty">
					<div>
						<p><cms:text constant="title_top_banner"/></p>

						<a
							href="url_Make('customer-clients', 'contact-us')"
							cms:eval="href"
							>
							<cms:text constant="title_button_sign"/>
						</a>
					</div>
				</div>

			</section>
			<!-- Footer -->
			<cms:template file="parts/footer.xml"/>	
		</body>
	</html>
</document>
