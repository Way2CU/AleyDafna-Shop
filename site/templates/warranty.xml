<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<html lang="$language" dir="$language_rtl ? 'rtl' : 'ltr'" cms:eval="lang,dir">
		<head>
			<title>
				<cms:text constant="site_title"/>
				<cms:raw text=" - "/>
				<cms:text constant="menu_agreement"/>
			</title>

			<!-- Page description -->
			<cms:module
				name="page_info"
				action="set_description"
				article="warranty"
				/>

			<cms:template file="parts/opengraph_generic.xml"/>
			<cms:module name="shop" action="include_cart_scripts"/>
			<cms:collection include="page_control,dialog,jquery_event_drag,jquery_event_scroll,scrollbar"/>
			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body>
			<!-- Header -->
			<cms:desktop>
				<cms:template file="parts/header.xml"/>
			</cms:desktop>

			<cms:mobile>
				<cms:template file="parts/mobile_header.xml"/>
			</cms:mobile>

			<section id="warranty">
				<article>
					<cms:module
						name="articles"
						action="show"
						text_id="warranty"
						template="parts/article.xml"
						/>
				</article>
			</section>

			<!-- Footer -->
			<cms:template file="parts/footer.xml"/>
		</body>
	</html>
</document>
