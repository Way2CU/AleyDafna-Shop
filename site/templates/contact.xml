<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<cms:var name="_DOCTYPE"/>
	<html lang="$language" cms:eval="lang">
		<head>
			<title>
				<cms:text constant="site_title"/>
				<cms:raw text=" - "/>
				<cms:text constant="menu_contact"/>
			</title>
			<!-- Page description -->
			<cms:module name="shop" action="include_cart_scripts"/>
			<cms:collection include="page_control,dialog,jquery_event_drag,jquery_event_scroll,scrollbar"/>
			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body class="$language_rtl ? 'rtl' : 'ltr'" cms:eval="class">
			<!-- Header -->
			<cms:desktop>
				<cms:template file="parts/header.xml"/>
			</cms:desktop>

			<cms:mobile>
				<cms:template file="parts/mobile_header.xml"/>
			</cms:mobile>

			<section id="contact">				
				<h2><cms:text constant="menu_contact"/></h2>

				<div id="information_details">
					<address>
						<svg>
							<use
								href="#location"
								xlink:href="site/images/site-sprite.svg#location"
								/>
						</svg>
						<p><cms:text constant="address"/></p>
					</address>

					<div>
						<svg>
							<use
								href="#clock"
								xlink:href="site/images/site-sprite.svg#clock"
								/>
						</svg>
						<p><cms:text constant="working_hours"/></p>
					</div>

					<div>
						<svg>
							<use
								href="#phone"
								xlink:href="site/images/site-sprite.svg#phone"
								/>
						</svg>

						<a
							href="'tel:'.urlencode(Language::getText('phone'))"
							cms:eval="href"
							class="phone"
							>
							<cms:text constant="phone"/>
						</a>

						<a
							href="'tel:'.urlencode(Language::getText('phone2'))"
							cms:eval="href"
							class="phone"
							>
							<cms:text constant="phone2"/>
						</a>
					</div>

					<a href="#" class="facebook">
						<svg>
							<use
								href="#facebook"
								xlink:href="site/images/site-sprite.svg#facebook"
								/>
						</svg>
						<cms:text constant="title_aley_facebook"/>
					</a>
					<article>
						<cms:module
							name="articles"
							action="show"
							text_id="delivery_areas"
							template="parts/article_delivery_areas.xml"
							/>
					</article>	
				</div>

				<a  href="https://www.google.co.il/maps/place/%D7%A2%D7%9C%D7%99+%D7%93%D7%A4%D7%A0%D7%94%E2%80%AD/@32.0817867,34.8070791,17z/data=!3m1!4b1!4m2!3m1!1s0x151d4bb844b1a821:0x586f5cf739269744"
					class="map">
					<img 
						src="_BASEURL.'/site/images/map.png'" 
						alt="map"
						cms:eval="src"
						/>
				</a>

				<div id="form_wrap">
					<p><cms:text constant="title_form"/></p>
					<cms:module
						name="contact_form"
						action="show"
						text_id="contact"
						/>
				</div>
			</section>	

			<!-- Footer -->
			<cms:template file="parts/footer.xml"/>	
		</body>
	</html>
</document>