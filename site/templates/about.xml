<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<cms:var name="_DOCTYPE"/>
	<html lang="$language" cms:eval="lang">
		<head>
			<title>
				<cms:text constant="site_title"/>
				<cms:raw text=" - "/>
				<cms:text constant="menu_about"/>
			</title>
			<!-- Page description -->
			<cms:module 
				name="page_info" 
				action="set_description" 
				article="about"
				/>

			<cms:module name="shop" action="include_cart_scripts"/>
			<cms:collection include="page_control,dialog,jquery_event_drag,jquery_event_scroll,scrollbar"/>
			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body class="$language_rtl ? 'rtl' : 'ltr'" cms:eval="class">
			<!-- Header -->
			<cms:desktop>
				<cms:template file="parts/header.xml"/>
			</cms:desktop>

			<cms:mobile>
				<cms:template file="parts/mobile_header.xml"/>
			</cms:mobile>

			<section id="about">
				<article>
					<cms:module
						name="articles"
						action="show"
						text_id="about"
						template="parts/article.xml"
						/>
					<img 
						src="_BASEURL.'/site/images/logo-vertical.svg'"  
						alt="logo"
						cms:eval="src"
						/>

					<span><cms:text constant="title_logo"/></span>		
				</article>
			</section>	
			<!-- Footer -->
			<cms:template file="parts/footer.xml"/>	
		</body>
	</html>
</document>