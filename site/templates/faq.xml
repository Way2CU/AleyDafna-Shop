<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<cms:var name="_DOCTYPE"/>
	<html lang="$language" cms:eval="lang">
		<head>
			<title>
				<cms:text constant="site_title"/>
				<cms:raw text=" - "/>
				<cms:text constant="menu_faq"/>
			</title>
			<!-- Page description -->
			<meta
				name="description"
				content="about_page_description"
				cms:constant="content"
				/>
			<cms:module name="shop" action="include_cart_scripts"/>
			<cms:collection include="page_control"/>
			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body class="$language_rtl ? 'rtl' : 'ltr'" cms:eval="class">
			<!-- Header -->
			<cms:desktop>
				<cms:template file="parts/header.xml"/>
			</cms:desktop>

			<cms:mobile>
				<cms:template file="parts/mobile_header.xml"/>
			</cms:mobile>

			<section id="faq">
				<article>
					<h2><cms:text constant="title_faq"/></h2>
					<cms:module
						name="faq"
						action="show_list"
						template="parts/questions.xml"
						/>
				</article>
			</section>	

			<!-- Footer -->
			<cms:template file="parts/footer.xml"/>	
		</body>
	</html>
</document>
