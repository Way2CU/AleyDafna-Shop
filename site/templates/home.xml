<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<cms:var name="_DOCTYPE"/>
	<html lang="$language" dir="$language_rtl ? 'rtl' : 'ltr'" cms:eval="lang,dir">
		<head>
			<title><cms:text constant="site_title"/></title>

			<cms:template file="parts/opengraph_generic.xml"/>
			<cms:module name="shop" action="include_cart_scripts"/>
			<cms:collection include="page_control,communicator,dialog,jquery_event_drag,jquery_event_scroll,scrollbar"/>
			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body>
			<!-- Header -->
			<cms:desktop>
				<cms:template file="parts/header.xml"/>

				<section id="slider">
					<div class="banner_container">
						<cms:template file="parts/home_page_banners.xml"/>
					</div>

					<div class="header_slider">
						<a href="javascript:void(0)" class="previous"></a>
						<cms:module
							name="links"
							action="show_link_list"
							group="slider"
							template="parts/slider_image.xml"
							/>
						<a href="javascript:void(0)" class="next"></a>
					</div>
				</section>

				<section id="news">
					<div class="news_container">
						<span>
							<cms:svg file="site-sprite.svg" symbol="speaker"/>
							<cms:text constant="title_button_updates"/>
						</span>

						<ul id="news_list">
							<cms:module
								name="news"
								action="show_list"
								group="news"
								template="parts/news_article.xml"
								/>
						</ul>
					</div>
				</section>

				<section id="promoted_category">
					<cms:module
						name="shop"
						action="show_item_list"
						category="promoted"
						template="parts/category_items_template.xml"
						>
						<cms:transfer target="category" name="id"/>
					</cms:module>
				</section>

				<section id="special_categories">
					<cms:module
						name="shop"
						action="show_category"
						text_id="best_seller"
						template="parts/special_category_template.xml"
						/>

					<cms:module
						name="shop"
						action="show_category"
						text_id="thank_you"
						template="parts/special_category_template.xml"
						/>

					<cms:module
						name="shop"
						action="show_category"
						text_id="treat"
						template="parts/special_category_template.xml"
						/>

					<cms:module
						name="shop"
						action="show_category"
						text_id="love"
						template="parts/special_category_template.xml"
						/>

					<cms:module
						name="shop"
						action="show_category"
						text_id="celebration"
						template="parts/special_category_template.xml"
						/>

					<cms:module
						name="shop"
						action="show_category"
						text_id="baby"
						template="parts/special_category_template.xml"
						/>
					<cms:module
						name="shop"
						action="show_category"
						text_id="combination"
						template="parts/special_category_template.xml"
						/>

					<cms:module
						name="shop"
						action="show_category"
						text_id="condolences"
						template="parts/special_category_template.xml"
						/>

					<cms:module
						name="shop"
						action="show_category"
						text_id="ballons"
						template="parts/special_category_template.xml"
						/>

					<cms:module
						name="shop"
						action="show_category"
						text_id="chocolate"
						template="parts/special_category_template.xml"
						/>

					<cms:module
						name="shop"
						action="show_category"
						text_id="special_events"
						template="parts/special_category_template.xml"
						/>

					<cms:module
						name="shop"
						action="show_category"
						text_id="prosperity"
						template="parts/special_category_template.xml"
						/>
				</section>
			</cms:desktop>

			<cms:mobile>
				<cms:template file="parts/mobile_header.xml"/>

				<!-- Mobile slider -->
				<section id="slider">
					<cms:module
						name="links"
						action="show_link_list"
						group="mobile_header_links"
						template="parts/slider_image.xml"
						/>
					<div class="controls">	</div>
				</section>

				<section id="promoted_category">
					<cms:module
						name="shop"
						action="show_item_list"
						category="promoted"
						template="parts/category_items_template.xml"
						/>
				</section>

				<section id="news">
					<div class="news_container">
						<span>
							<cms:svg file="site-sprite.svg" symbol="speaker"/>
							<cms:text constant="title_button_updates"/>
						</span>

						<ul id="news_list">
							<cms:module
								name="news"
								action="show_list"
								group="news"
								template="parts/news_article.xml"
								/>
						</ul>
					</div>
				</section>

				<section id="special_categories">
					<cms:module
						name="shop"
						action="show_category"
						text_id="best_seller"
						template="parts/special_category_template.xml"
						/>

					<cms:module
						name="shop"
						action="show_category"
						text_id="thank_you"
						template="parts/special_category_template.xml"
						/>

					<cms:module
						name="shop"
						action="show_category"
						text_id="treat"
						template="parts/special_category_template.xml"
						/>

					<cms:module
						name="shop"
						action="show_category"
						text_id="love"
						template="parts/special_category_template.xml"
						/>

					<cms:module
						name="shop"
						action="show_category"
						text_id="celebration"
						template="parts/special_category_template.xml"
						/>

					<cms:module
						name="shop"
						action="show_category"
						text_id="baby"
						template="parts/special_category_template.xml"
						/>
					<cms:module
						name="shop"
						action="show_category"
						text_id="combination"
						template="parts/special_category_template.xml"
						/>

					<cms:module
						name="shop"
						action="show_category"
						text_id="condolences"
						template="parts/special_category_template.xml"
						/>

					<cms:module
						name="shop"
						action="show_category"
						text_id="ballons"
						template="parts/special_category_template.xml"
						/>

					<cms:module
						name="shop"
						action="show_category"
						text_id="chocolate"
						template="parts/special_category_template.xml"
						/>

					<cms:module
						name="shop"
						action="show_category"
						text_id="special_events"
						template="parts/special_category_template.xml"
						/>

					<cms:module
						name="shop"
						action="show_category"
						text_id="prosperity"
						template="parts/special_category_template.xml"
						/>
				</section>
			</cms:mobile>

			<!-- Footer -->
			<cms:template file="parts/footer.xml"/>
		</body>
	</html>
</document>
