<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<cms:var name="_DOCTYPE"/>
	<html lang="$language" cms:eval="lang">
		<head>
			<title><cms:text constant="site_title"/></title>
			<cms:module name="shop" action="include_cart_scripts"/>
			<cms:collection include="communicator"/>
			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body class="$language_rtl ? 'rtl' : 'ltr'" cms:eval="class">
			<!-- Header -->
			<cms:template file="parts/header.xml"/>

			<section id="slider">
				<div class="banner_container">
					<div class="banner">
						<div>
							<p><cms:text constant="title_top_banner"/></p>

							<a
								href="url_Make('customer-clients', 'contact-us')"
								cms:eval="href"
								>
								<cms:text constant="title_button_sign"/>
							</a>
						</div>
					</div>

					<div class="banner">
						<div>
							<p><cms:text constant="title_bottom_banner"/></p>

							<a
								href="url_Make('business-clients', 'contact-us')"
								cms:eval="href"
								>
								<cms:text constant="title_button_special_deals"/>
							</a>
						</div>
					</div>
				</div>

				<div class="header_slider">
					<a href="javascript:void(0)" class="previous">
						<svg>
							<use
								href="#arrow"
								xlink:href="site/images/site-sprite.svg#arrow"
								/>
						</svg>
					</a>
					<cms:module
						name="gallery"
						action="show_image_list"
						group="header_gallery"
						template="parts/slider_image.xml"
						/>
					<a href="javascript:void(0)" class="next">
						<svg>
							<use
								href="#arrow"
								xlink:href="site/images/site-sprite.svg#arrow"
								/>
						</svg>
					</a>	
				</div>

			</section>

			<section id="news">
				<div class="news_container">
					<span>
						<svg>
							<use
								href="#speaker"
								xlink:href="site/images/site-sprite.svg#speaker"
								/>
						</svg>
						<cms:text constant="title_button_updates"/>
					</span>

					<ul id="news_list">
						<cms:module
							name="news"
							action="show_list"
							group="news"
							template="parts/news_article.xml"
							/>
					</ul>
				</div>	

			</section>

			<section id="special_categories">
				<cms:module
					name="shop"
					action="show_category"
					text_id="best_seller"
					template="parts/special_category_template.xml"
					/>

				<cms:module
					name="shop"
					action="show_category"
					text_id="thank_you"
					template="parts/special_category_template.xml"
					/>

				<cms:module
					name="shop"
					action="show_category"
					text_id="treat"
					template="parts/special_category_template.xml"
					/>
					
				<cms:module
					name="shop"
					action="show_category"
					text_id="love"
					template="parts/special_category_template.xml"
					/>
					
				<cms:module
					name="shop"
					action="show_category"
					text_id="celebration"
					template="parts/special_category_template.xml"
					/>
					
				<cms:module
					name="shop"
					action="show_category"
					text_id="baby"
					template="parts/special_category_template.xml"
					/>	
				<cms:module
					name="shop"
					action="show_category"
					text_id="combination"
					template="parts/special_category_template.xml"
					/>

				<cms:module
					name="shop"
					action="show_category"
					text_id="condolences"
					template="parts/special_category_template.xml"
					/>

				<cms:module
					name="shop"
					action="show_category"
					text_id="ballons"
					template="parts/special_category_template.xml"
					/>

				<cms:module
					name="shop"
					action="show_category"
					text_id="chocolate"
					template="parts/special_category_template.xml"
					/>		
					
				<cms:module
					name="shop"
					action="show_category"
					text_id="special_events"
					template="parts/special_category_template.xml"
					/>
					
				<cms:module
					name="shop"
					action="show_category"
					text_id="prosperity"
					template="parts/special_category_template.xml"
					/>				
				
			</section>

			<section id="promoted_category">
				<cms:module
					name="shop"
					action="show_item_list"
					category="promoted"
					template="parts/category_items_template.xml"
					/>

			</section>
			<!-- Footer -->
			<cms:template file="parts/footer.xml"/>	
		</body>
	</html>
</document>
