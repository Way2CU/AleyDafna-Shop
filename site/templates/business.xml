<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<cms:var name="_DOCTYPE"/>
	<html lang="$language" dir="$language_rtl ? 'rtl' : 'ltr'" cms:eval="lang,dir">
		<head>
			<title>
				<cms:text constant="site_title"/>
				<cms:raw text=" - "/>
				<cms:text constant="menu_business"/>
			</title>
			<!-- Page description -->
			<cms:module name="shop" action="include_cart_scripts"/>
			<cms:collection include="page_control,dialog,jquery_event_drag,jquery_event_scroll,scrollbar"/>
			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body>
			<!-- Header -->
			<cms:desktop>
				<cms:template file="parts/header.xml"/>
			</cms:desktop>

			<cms:mobile>
				<cms:template file="parts/mobile_header.xml"/>
			</cms:mobile>

			<section id="business">
				<div class="title">
					<h2><cms:text constant="title_business"/></h2>
					<p><cms:text constant="description_business"/></p>
				</div>

				<div id="form_business">

					<p><cms:text constant="title_form_business"/></p>

					<cms:module
						name="contact_form"
						action="show"
						text_id="business_clients_form"
						/>
				</div>
			</section>

			<!-- Footer -->
			<cms:template file="parts/footer.xml"/>	
		</body>
	</html>
</document>